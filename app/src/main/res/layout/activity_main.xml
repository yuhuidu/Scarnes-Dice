<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smithjterm.scarnesdice.MainActivity">

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="414dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="11dp">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="30dp" />

        <ImageView
            android:id="@+id/die_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dice1"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="98dp" />


        <LinearLayout
            android:layout_width="301dp"
            android:layout_height="69dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="280dp">

            <Button
                android:id="@+id/rollButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="rollButtonPress"
                android:text="@string/rollButton"
                tools:layout_editor_absoluteX="43dp"
                tools:layout_editor_absoluteY="198dp" />

            <Button
                android:id="@+id/holdButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="holdButtonPress"
                android:text="@string/holdButton"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="198dp" />

            <Button
                android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="resetButtonPress"
                android:text="@string/resetButton"
                tools:layout_editor_absoluteX="255dp"
                tools:layout_editor_absoluteY="198dp" />

        </LinearLayout>


</LinearLayout>

</android.support.constraint.ConstraintLayout>
